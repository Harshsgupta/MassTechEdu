@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: url('C:\Users\Nisha Gupta\source\repos\MVCELearning\wwwroot\Content\images\learning login.png') no-repeat center center fixed;
            background-size: cover;
            background-color: #000;
            color: #fff;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(255, 255, 255, 0.2);
                z-index: -1;
            }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            background-color: rgba(255, 255, 255, 0.2);
        }

        .card-header {
            background-color: rgba(0, 123, 255, 0.8);
            color: #fff;
            border-bottom: none;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .form-control {
            border-radius: 5px;
            background-color: rgba(255, 255, 255, 0.5);
            color: #000;
        }

        .btn-primary {
            background-color: rgba(0, 123, 255, 0.8);
            border: none;
            border-radius: 5px;
        }

            .btn-primary:hover {
                background-color: rgba(0, 94, 196, 0.8);
            }

        .text-danger {
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card" style="box-shadow: 0 0 15px rgba(255, 255, 255, 0.8); border-radius: 30px; overflow: hidden; background-color: rgba(0, 0, 0, 0.5)">
                    <div>
                        <h4 style="background-color: transparent; text-align: center; font-style:initial; color:white"><b>LOGIN</b></h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                                <label for="Email" class="form-label" style="color:aliceblue"><b>EMAIL:</b></label>
                                <input type="email" class="form-control" name="email" required>
                            </div>

                            <div class="mb-3">
                                <label for="Password" class="form-label" style="color:aliceblue"><b>PASSWORD:</b></label>
                                <input type="password" class="form-control" name="password" required>
                            </div>

                            <div style="background-color: transparent; text-align: center; font-style: inherit">
                                <button type="submit" class="btn btn-primary" style="background-color: darkorange">Login</button>
                                <p class="pt-3 text-white">
                                    Not a User? <a href="/Auth/Register" class="badge badge-info">Register here</a>
                                </p>
                            </div>
                        </form>
                        @if (ViewBag.Error != null)
                        {
                            <p class="text-danger mt-3">@ViewBag.Error</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
